<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PathView">
        <attr name="pathColor"
              format="color"/>
        <attr name="pathWidth"
              format="float"/>
        <attr name="svg"
              format="reference"/>
    </declare-styleable>

    <declare-styleable name="TransPathView">
        <attr name="strokeType" format="enum">
            <enum name="stroke" value="1" />
            <enum name="fill" value="2" />
            <enum name="stroke_fill" value="4" />
        </attr>
        <attr name="strokeColor" format="color|reference"/>
        <attr name="animDuration" format="integer|reference"/>
        <attr name="path1" format="string|reference"/>
        <attr name="path2" format="string|reference"/>
        <attr name="viewPortWidth" format="integer|reference"/>
        <attr name="viewPortHeight" format="integer|reference"/>
        <attr name="strokeWidth" format="dimension|reference"/>
    </declare-styleable>


    <!--注意这里的name要和自定义View的名称一致，不然在xml布局中无法引用-->
    <declare-styleable name="HorizontalExpandMenu">
        <!--下面是绘制圆角矩形需要的属性-->
        <attr name="back_color" format="color"></attr>
        <attr name="stroke_size" format="dimension"></attr>
        <attr name="stroke_color" format="color"></attr>
        <attr name="corner_radius" format="dimension"></attr>
        <!--下面是绘制菜单栏按钮+ -->
        <attr name="button_style">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="button_icon_size" format="dimension"/>
        <attr name="button_icon_stroke_width" format="dimension"/>
        <attr name="button_icon_color" format="color"></attr>
        <attr name="expand_time" format="integer"></attr>
    </declare-styleable>

    <!--圆形进度条-->
    <declare-styleable name="CircleBarView">
        <attr name="progress_color" format="color"/>
        <attr name="bg_color" format="color"/>
        <attr name="bar_width" format="dimension"/>
        <attr name="start_angle" format="float"/>
        <attr name="sweep_angle" format="float"/>
    </declare-styleable>
    <declare-styleable name="WaveProgressView">
        <attr name="wave_color" format="color"/>
        <attr name="wave_bg_color" format="color"/>
        <attr name="wave_width" format="dimension"/>
        <attr name="wave_height" format="dimension"/>
        <attr name="second_wave_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="TapeView">
        <attr name="bgColor" format="color|reference"/>
        <attr name="calibrationColor" format="color|reference"/>
        <attr name="calibrationWidth" format="dimension|reference"/>
        <attr name="calibrationShort" format="dimension|reference"/>
        <attr name="calibrationLong" format="dimension|reference"/>

        <attr name="triangleColor" format="color|reference"/>
        <attr name="triangleHeight" format="dimension|reference"/>

        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>

        <attr name="per" format="float|reference"/>
        <attr name="perCount" format="integer"/>
        <attr name="gapWidth" format="dimension|reference"/>
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="value" format="float"/>
    </declare-styleable>

</resources>