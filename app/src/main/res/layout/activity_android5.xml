<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.gjj.androidstudydemo.activity.Android5Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_explode_anim"
            style="@style/Button_style"
            android:text="explode"/>
        <Button
            android:id="@+id/btn_slide_anim"
            style="@style/Button_style"
            android:text="slide"/>
        <Button
            android:id="@+id/btn_fade_anim"
            style="@style/Button_style"
            android:text="fade"/>
        <Button
            android:id="@+id/btn_share_anim"
            style="@style/Button_style"
            android:text="share"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/fab_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@mipmap/ic_launcher"
                android:elevation="5dp"
                android:onClick="explode"
                android:transitionName="fab" />

            <TextView
                android:id="@+id/tx_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Android"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:elevation="5dp"
                android:transitionName="user_name"
                android:textColor="#353535"/>
        </RelativeLayout>
    </LinearLayout>


</ScrollView>
